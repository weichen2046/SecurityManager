<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_alignParentStart="true"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/app_icon"
            android:layout_width="48dip"
            android:layout_height="48dip" />

        <TextView
            android:id="@+id/app_label"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1.0" />
    </LinearLayout>
    <View
        android:id="@+id/divider"
        android:layout_width="1px"
        android:layout_height="@dimen/divider_bar_size"
        android:background="@drawable/ic_divider_dashed_holo_dark"
        android:layout_gravity="center_vertical"
    />
    <View
        android:id="@+id/divider_config_start"
        android:layout_width="@dimen/divider_end_size"
        android:layout_height="@dimen/divider_bar_size"
        android:layout_gravity="center_vertical"
    />
    <ImageButton
            android:id="@+id/config_icon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="?android:attr/selectableItemBackground" />
    <View
        android:id="@+id/divider_config_end"
        android:layout_width="@dimen/divider_end_size"
        android:layout_height="@dimen/divider_bar_size"
        android:layout_gravity="center_vertical"
    />
    <!-- btn_check_buttonless_on.png -->
    <!-- ic_delete.png ic_lockscreen_forgotpassword_pressed.png -->

</LinearLayout>